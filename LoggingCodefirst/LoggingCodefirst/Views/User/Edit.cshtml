@model LoggingCodefirst.ViewModels.UserViewModel
@using LoggingCodefirst.Resources

@inject LocalizationService Localizer
@{
    ViewBag.Title = Localizer.GetLocalizedString("Edit");
    Layout = "_Layout";
} 
<div class="page-breadcrumb">
    <div class="row">
        <div class="col-12 d-flex align-items-center">
            <h3 class="page-title">@ViewBag.Title</h3>
            <div class="ml-auto text-right">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="User" asp-action="Index">@Localizer.GetLocalizedString("User")</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-6">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" class="form-control" readonly/>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="Fullname"></label>
                            <input asp-for="Fullname" class="form-control" />
                            <span asp-validation-for="Fullname" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Phone"></label>
                            <input asp-for="Phone" type="number" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="StoreId"></label>
                            <select asp-for="StoreId" class="form-control" asp-items="ViewBag.StoreId"></select>
                            <span asp-validation-for="StoreId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Address"></label>
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">@Localizer.GetLocalizedString("Save")</button>
                        </div>
                    </form>
                    <div>
                        <a asp-action="Index">@Localizer.GetLocalizedString("Back to List")</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>