@model LoggingCodefirst.ViewModels.StockViewModel
@using LoggingCodefirst.Resources

@inject LocalizationService Localizer
@{
    ViewBag.Title = Localizer.GetLocalizedString("Edit");
    Layout = "_Layout";
} 

<div class="page-breadcrumb">
    <div class="row">
        <div class="col-12 d-flex align-items-center">
            <h3 class="page-title">@ViewBag.Title</h3>
            <div class="ml-auto text-right">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Stock" asp-action="Index">@Localizer.GetLocalizedString("Stock")</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-6">
            <div class="card">
                <div class="card-body">        
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input asp-for="StoreId" type="hidden"/>
                        <input asp-for="ProductId" type="hidden"/>
                        <div class="form-group">
                            <label asp-for="StoreId"></label>
                            <select asp-for="StoreId" class ="form-control" asp-items="ViewBag.StoreId" disabled></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="ProductId"></label>
                            <select asp-for="ProductId" class ="form-control" asp-items="ViewBag.ProductId" disabled></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="Quanlity"></label>
                            <input asp-for="Quanlity" class="form-control" />
                            <span asp-validation-for="Quanlity" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">@Localizer.GetLocalizedString("Save")</button>
                        </div>
                    </form>
                    <div>
                        <a asp-action="Index">@Localizer.GetLocalizedString("Back to List")</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>