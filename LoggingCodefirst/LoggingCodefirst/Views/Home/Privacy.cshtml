@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Privacy Policy"];
}

<div class="page-breadcrumb">
    <div class="row">
        <div class="col-12 d-flex align-items-center">
            <h3 class="page-title">@ViewBag.Title</h3>
            <div class="ml-auto text-right">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a  asp-controller="Home" asp-action="Index">@Localizer["Home"]</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@Localizer["Privacy"]</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <p>@Localizer["Use this page to detail your site's privacy policy."]</p>
                </div>
            </div>
        </div>
    </div>
</div>