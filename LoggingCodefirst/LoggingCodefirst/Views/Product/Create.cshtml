@model ProductViewModel
@{
    ViewBag.Title = ProductLocalizer.GetLocalizedString("lbl_CreateProduct");
    Layout = "_Layout";
}

<div class="page-breadcrumb">
    <div class="row">
        <div class="col-12 d-flex align-items-center">
            <h3 class="page-title">@ViewBag.Title</h3>
            <div class="ml-auto text-right">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Product" asp-action="Index">@Localizer.GetLocalizedString("btn_Product")</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@Localizer.GetLocalizedString("btn_Create")</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ProductName">@ProductLocalizer.GetLocalizedString("lbl_ProductName")</label>
                                    <input asp-for="ProductName" class="form-control" />
                                    <span asp-validation-for="ProductName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="BrandId">@ProductLocalizer.GetLocalizedString("lbl_Brand")</label>
                                    <select asp-for="BrandId" class ="form-control" asp-items="ViewBag.BrandId"></select>
                                </div>
                                <div class="form-group">
                                    <label asp-for="CategoryId">@ProductLocalizer.GetLocalizedString("lbl_Category")</label>
                                    <select asp-for="CategoryId" class ="form-control" asp-items="ViewBag.CategoryId"></select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ModelYear">@ProductLocalizer.GetLocalizedString("lbl_ModelYear")</label>
                                    <input asp-for="ModelYear" class="form-control" />
                                    <span asp-validation-for="ModelYear" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ListPrice">@ProductLocalizer.GetLocalizedString("lbl_ListPrice")</label>
                                    <input asp-for="ListPrice" class="form-control" />
                                    <span asp-validation-for="ListPrice" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ImageFile">@ProductLocalizer.GetLocalizedString("lbl_ProductImage")</label>
                                    <input type="file" asp-for="ImageFile" class="form-control-file"/>
                                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <a class="btn btn-cyan" asp-action="Index">@Localizer.GetLocalizedString("btn_Back")</a>
                                    <button type="submit" class="btn btn-primary">@Localizer.GetLocalizedString("btn_Save")</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>