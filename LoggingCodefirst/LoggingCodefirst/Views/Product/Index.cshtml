@using LoggingCodefirst.ViewModels.ProductViewModels
@using Microsoft.AspNetCore.Mvc.Localization
@model IEnumerable<ProductIndexViewModel>

@inject IViewLocalizer Localizer
@{
    ViewBag.Title = Localizer["Product List"];
    Layout = "_Layout";
} 

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" style="padding-left: 25px;">
        <strong>@TempData["SuccessMessage"]</strong> 
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true" style="font-size:20px">×</span>
        </button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" style="padding-left: 25px;">
        <strong>@TempData["ErrorMessage"]</strong> 
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true" style="font-size:20px">×</span>
        </button>
    </div>
}


<div class="page-breadcrumb">
    <div class="row">
        <div class="col-12 d-flex align-items-center">
            <h3 class="page-title">@ViewBag.Title</h3>
            <div class="ml-auto text-right">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Product" asp-action="Index">@Localizer["Product"]</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@Localizer["List"]</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <a asp-action="Create"> <i class="mdi mdi-library-plus" style=" color: green"></i>@Localizer["Create"]</a>
                    <div class="table-responsive">
                        <table id="zero_config" class="table table-hover table-striped">
                            <thead class="thead-dark">
                            <tr>
                                <th style="text-align: center;">@Localizer["No"]</th>
                                <th style="text-align: center;">
                                    @Html.DisplayNameFor(model => model.ProductName)
                                </th>
                                <th style="text-align: center;">
                                    @Html.DisplayNameFor(model => model.BrandId)
                                </th>
                                <th style="text-align: center;">
                                    @Html.DisplayNameFor(model => model.CategoryId)
                                </th>
                                <th style="text-align: center;">
                                    @Html.DisplayNameFor(model => model.ModelYear)
                                </th>
                                <th style="text-align: center;">
                                    @Html.DisplayNameFor(model => model.ListPrice)
                                </th>
                                <th style="text-align: center;">
                                    @Html.DisplayNameFor(model => model.Stocks)
                                </th>
                                <th style="text-align: center;">
                                    @Html.DisplayNameFor(model => model.ImagePath)
                                </th>
                                <th style="text-align: center;">@Localizer["Action"]</th>
                            </tr>
                            </thead>
                            <tbody>
                            @{ var stt = 0;}
                            @foreach (var item in Model)
                            {
                                stt += 1;
                                <tr>
                                    <td style="text-align: center;">
                                        @stt
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ProductName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Brand.BrandName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Category.CategoryName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ModelYear)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ListPrice)
                                    </td>
                                    <td>
                                        @foreach (var stock in item.Stocks)
                                        {
                                            @stock.Store.StoreName @:: @stock.Quanlity <br />
                                        }
                                    </td>
                                    <td style="text-align: center;">
                                        <img src="~/images/@Html.DisplayFor(modelItem => item.ImagePath)" width="100px" alt=""/>
                                    <td style="text-align: center;">
                                        <a asp-action="Edit" asp-route-id="@item.Id">
                                            <i class="mdi mdi-grease-pencil" style="font-size: 24px; color: black"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" 
                                           onclick="return confirm('Are you sure you want to delete this product?');">
                                            <i class="fa fa-trash" style="font-size: 24px; color: red; padding-left: 5px;"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>