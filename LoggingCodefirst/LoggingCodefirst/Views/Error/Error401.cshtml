@{
    ViewBag.Title = "401";
    Layout = "_ErrorLayout";
}

<div class="error-box">
    <div class="error-body text-center">
        <h1 class="error-title text-danger">@ViewBag.Title</h1>
        <h3 class="text-uppercase">@ErrorLocalizer.GetLocalizedString("lbl_401Title")</h3>
        <p class="text-muted m-t-30 m-b-30">@ErrorLocalizer.GetLocalizedString("lbl_401Detail")</p>
        <a class="btn btn-danger btn-rounded waves-effect waves-light m-b-40" asp-controller="Account" asp-action="Login" asp-route-url="">
            @Localizer.GetLocalizedString("btn_Login")
        </a> </div>
</div>