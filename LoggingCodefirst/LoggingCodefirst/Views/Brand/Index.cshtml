@using LoggingCodefirst.ViewModels.BrandViewModels
@using Microsoft.AspNetCore.Mvc.Localization
@model IEnumerable<LoggingCodefirst.ViewModels.BrandViewModels.BrandIndexViewModel>

@inject IViewLocalizer Localizer
@{
    ViewBag.Title = Localizer["Brand List"];
    Layout = "_Layout";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" style="padding-left: 25px;">
        <strong>@TempData["SuccessMessage"]</strong> 
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true" style="font-size:20px">×</span>
        </button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" style="padding-left: 25px;">
        <strong>@TempData["ErrorMessage"]</strong> 
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true" style="font-size:20px">×</span>
        </button>
    </div>
}

<div class="page-breadcrumb">
    <div class="row">
        <div class="col-12 d-flex align-items-center">
            <h3 class="page-title">@ViewBag.Title</h3>
            <div class="ml-auto text-right">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Brand" asp-action="Index">@Localizer["Brand"]</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@Localizer["List"]</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <a asp-action="Create"> <i class="mdi mdi-library-plus" style=" color: green"></i>@Localizer["Create"]</a>
                    <div class="table-responsive">
                        <table id="zero_config" class="table table-hover table-striped">
                            <thead class="thead-dark">
                            <tr>
                                <th style="text-align: center;">@Localizer["No"]</th>
                                <th style="text-align: center;">
                                    @Html.DisplayNameFor(model => model.BrandName)
                                </th>
                                <th style="text-align: center;">@Localizer["Action"]</th>
                            </tr>
                            </thead>
                            <tbody>
                            @{ var stt = 0;}
                            @foreach (var item in Model)
                            {
                                stt += 1;
                                <tr>
                                    <td style="text-align: center;">
                                        @stt
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BrandName)
                                    </td>
                                    <td style="text-align: center;">
                                        <a asp-action="Edit" asp-route-id="@item.Id">
                                            <i class="mdi mdi-grease-pencil" style="font-size: 24px; color: black"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                           onclick="return confirm('When you delete this brand, the related products will be deleted! Are you sure you want to delete this brand?');">
                                            <i class="fa fa-trash" style="font-size: 24px; color: red; padding-left: 5px;"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>