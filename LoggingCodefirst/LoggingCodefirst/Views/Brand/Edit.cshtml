@model LoggingCodefirst.ViewModels.BrandViewModels.BrandEditViewModel
@using LoggingCodefirst.ViewModels.BrandViewModels
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@{
    ViewBag.Title = Localizer["Edit Brand"];
    Layout = "_Layout";
}

<div class="page-breadcrumb">
    <div class="row">
        <div class="col-12 d-flex align-items-center">
            <h3 class="page-title">@ViewBag.Title</h3>
            <div class="ml-auto text-right">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Brand" asp-action="Index">@Localizer["Brand"]</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@Localizer["Edit"]</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-6">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="BrandName"></label>
                            <input asp-for="BrandName" class="form-control" />
                            <span asp-validation-for="BrandName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">@Localizer["Save"]</button>
                        </div>
                    </form>
                    <div>
                        <a asp-action="Index">@Localizer["Back to List"]</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>