@model StoreViewModel
@{
    ViewBag.Title = StoreLocalizer.GetLocalizedString("lbl_EditStore");
    Layout = "_Layout";
}

<div class="page-breadcrumb">
    <div class="row">
        <div class="col-12 d-flex align-items-center">
            <h3 class="page-title">@ViewBag.Title</h3>
            <div class="ml-auto text-right">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Store" asp-action="Index">@Localizer.GetLocalizedString("btn_Store")</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@Localizer.GetLocalizedString("btn_Edit")</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="StoreName">@StoreLocalizer.GetLocalizedString("lbl_StoreName")</label>
                                    <input asp-for="StoreName" class="form-control" autofocus/>
                                    <span asp-validation-for="StoreName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Email">@StoreLocalizer.GetLocalizedString("lbl_Email")</label>
                                    <input asp-for="Email" class="form-control"/>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Phone">@StoreLocalizer.GetLocalizedString("lbl_Phone")</label>
                                    <input asp-for="Phone" type="number" class="form-control"/>
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="State">@StoreLocalizer.GetLocalizedString("lbl_State")</label>
                                    <input asp-for="State" class="form-control" />
                                    <span asp-validation-for="State" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="City">@StoreLocalizer.GetLocalizedString("lbl_City")</label>
                                    <input asp-for="City" class="form-control" />
                                    <span asp-validation-for="City" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Street">@StoreLocalizer.GetLocalizedString("lbl_Street")</label>
                                    <input asp-for="Street" class="form-control" />
                                    <span asp-validation-for="Street" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ZipCode">@StoreLocalizer.GetLocalizedString("lbl_ZipCode")</label>
                                    <input asp-for="ZipCode" class="form-control" />
                                    <span asp-validation-for="ZipCode" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <a class="btn btn-cyan" asp-action="Index">@Localizer.GetLocalizedString("btn_Back")</a>
                                    <button type="submit" class="btn btn-primary">@Localizer.GetLocalizedString("btn_Save")</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>