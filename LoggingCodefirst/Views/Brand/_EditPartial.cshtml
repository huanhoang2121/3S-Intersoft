@model BrandViewModel

<!-- Modal -->
<div class="modal fade" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    @BrandLocalizer.GetLocalizedString("lbl_EditBrand")
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="changepassword" asp-action="Edit" enctype="multipart/form-data">
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group" style="text-align: left">
                        <label asp-for="BrandName">@BrandLocalizer.GetLocalizedString("lbl_BrandName")</label>
                        <input asp-for="BrandName" class="form-control" autofocus/>
                        <span asp-validation-for="BrandName" class="text-danger"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">
                    @Localizer.GetLocalizedString("btn_Close")
                </button>
                <button type="submit" form="changepassword" class="btn btn-primary" data-save="modal">
                    @Localizer.GetLocalizedString("btn_Save")
                </button>
            </div>
        </div>
    </div>
</div>