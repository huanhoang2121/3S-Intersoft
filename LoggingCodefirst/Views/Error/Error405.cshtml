@{
    ViewBag.Title = "405";
    Layout = "_ErrorLayout";
}

<div class="error-box">
    <div class="error-body text-center">
        <h1 class="error-title text-danger">@ViewBag.Title</h1>
        <h3 class="text-uppercase">@ErrorLocalizer.GetLocalizedString("lbl_405Title")</h3>
        <p class="text-muted m-t-30 m-b-30">@ErrorLocalizer.GetLocalizedString("lbl_405Detail")</p>
        <a href="javascript:history.go(-1)" class="btn btn-danger btn-rounded waves-effect waves-light m-b-40">@Localizer.GetLocalizedString("btn_Back")</a> </div>
</div>